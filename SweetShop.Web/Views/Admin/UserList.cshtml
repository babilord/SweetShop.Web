@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityUser>

<h2>User Management</h2>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}

<table class="table table-striped">
    <thead>
        <tr>
            <th>Email</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Email</td>
                <td>
                    <a asp-action="ApproveUser" asp-route-id="@user.Id" class="btn btn-success btn-sm">Approve</a>
                    <a asp-action="RevokeUser" asp-route-id="@user.Id" class="btn btn-danger btn-sm">Revoke</a>
                </td>
            </tr>
        }
    </tbody>
</table>
